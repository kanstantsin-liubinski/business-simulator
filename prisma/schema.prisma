generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String               @id @default(uuid())
  email           String               @unique
  password        String
  createdAt       DateTime             @default(now()) @map("created_at")
  updatedAt       DateTime             @updatedAt @map("updated_at")
  balance         Int                  @default(100000)
  accounts        Account[]
  ownedProperties CitiesEstateObject[]
  ownedCars       UserCar[]
  sessions        Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model City {
  id                  String               @id @default(uuid())
  name                String               @unique
  image               String
  createdAt           DateTime             @default(now()) @map("created_at")
  updatedAt           DateTime             @updatedAt @map("updated_at")
  citiesEstateObjects CitiesEstateObject[]

  @@map("cities")
}

model CitiesEstateObject {
  id                String   @id @default(uuid())
  name              String
  price             Int
  description       String
  x                 Float
  y                 Float
  type              String
  isRented          Boolean  @default(false) @map("is_rented")
  cityId            String   @map("city_id")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
  ownerId           String?  @map("owner_id")
  last_price_update DateTime @default(now())
  max_price         Int      @default(0)
  min_price         Int      @default(0)
  city              City     @relation(fields: [cityId], references: [id], onDelete: Cascade)
  owner             User?    @relation(fields: [ownerId], references: [id])

  @@map("cities_estate_objects")
}

model CarMake {
  id       String     @id
  name     String     @unique
  models   CarModel[]
  newCars  NewCar[]
  usedCars UsedCar[]
  createdAt DateTime  @default(now()) @map("created_at")

  @@map("car_makes")
}

model CarModel {
  id       String     @id
  name     String
  makeId   String     @map("make_id")
  make     CarMake    @relation(fields: [makeId], references: [id], onDelete: Cascade)
  newCars  NewCar[]
  usedCars UsedCar[]
  createdAt DateTime  @default(now()) @map("created_at")

  @@unique([makeId, name])
  @@map("car_models")
}

model NewCar {
  id        String    @id @default(uuid())
  makeId    String    @map("make_id")
  modelId   String    @map("model_id")
  year      Int
  condition Int       @default(100)
  color     String
  price     Int
  available Boolean   @default(true)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  make      CarMake   @relation(fields: [makeId], references: [id], onDelete: Cascade)
  model     CarModel  @relation(fields: [modelId], references: [id], onDelete: Cascade)

  @@map("new_cars")
}

model UsedCar {
  id        String    @id @default(uuid())
  makeId    String    @map("make_id")
  modelId   String    @map("model_id")
  year      Int
  mileage   Int
  condition Int
  color     String
  price     Int
  available Boolean   @default(true)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  make      CarMake   @relation(fields: [makeId], references: [id], onDelete: Cascade)
  model     CarModel  @relation(fields: [modelId], references: [id], onDelete: Cascade)
  owners    UserCar[]

  @@map("used_cars")
}

model UserCar {
  id        String    @id @default(uuid())
  userId    String    @map("user_id")
  carId     String    @map("car_id")
  createdAt DateTime  @default(now()) @map("created_at")

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  car       UsedCar   @relation(fields: [carId], references: [id], onDelete: Cascade)

  @@unique([userId, carId])
  @@map("user_cars")
}
